initial_state: [secretDoor:0, playerChoice:0, hostChoice:0]

secretDoor := {0, 1, 2};
playerChoice := {0, 1, 2};
hostChoice := {0, 1, 2};
while (hostChoice == playerChoice OR hostChoice == secretDoor) do {
    hostChoice := (hostChoice + 1) mod 3
}
notChosen := 0;
while (notChosen == playerChoice OR hostChoice == notChosen) do {
    notChosen := (notChosen + 1)
}