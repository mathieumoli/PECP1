initial_state: [secretDoor:0, playerChoice:0, hostChoice:0, notChosen:0]

secretDoor := {0, 1, 2};
playerChoice := {0, 1, 2};
hostChoice := {0, 1, 2};
while (hostChoice == playerChoice) do {
    hostChoice := hostChoice + 1 [3]
};
notChosen := 0;
while (notChosen == playerChoice) do {
    notChosen := notChosen + 1 [3]
}